<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.chkan.iqtimer.tools.TimerState"/>
        <variable
            name="session"
            type="com.chkan.iqtimer.CurrentSession"/>

    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="@{session.mTime}"
        app:animationOnPause="@{session.mState==TimerState.PAUSED}"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textSize="160sp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/brand_blue_900"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="toClick"
        tools:text="00:00"
        />


    <com.marcok.stepprogressbar.StepProgressBar
        android:id="@+id/stepProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:numberDots="@{session.plan}"
        app:activeDotIndex="@{session.mCount &lt; session.plan ? session.mCount : session.plan}"
        app:activeDotColor="@android:color/darker_gray"
        app:cumulativeDots="true"
        app:dotSize="5dp"
        app:inactiveDotColor="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer_view"
        app:spacing="5dp" />

    <ImageButton
        android:id="@+id/imageButtonMenu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="48dp"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_menu_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="toClick"
        android:contentDescription="@string/descim_menu"
        />

    <ImageButton
        android:id="@+id/imageButtonStop"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_stop_24"
        android:visibility="@{session.mState==TimerState.ACTIVE||session.mState==TimerState.PAUSED||session.mState==TimerState.BREAK ? View.VISIBLE : View.INVISIBLE}"
        app:layout_constraintBottom_toBottomOf="@+id/imageCount"
        app:layout_constraintEnd_toStartOf="@+id/imageCount"
        app:layout_constraintTop_toTopOf="@+id/imageCount"
        android:onClick="toClick"
        android:contentDescription="@string/stop"
        />

    <ImageView
        android:id="@+id/imageCount"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="48dp"
        android:src="@drawable/ring_blue"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButtonMenu"
        android:contentDescription="@string/count"
        />

    <TextView
        android:id="@+id/count_ses"
        android:text="@{session.mCount.toString()}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="14sp"
        android:textColor="@color/brand_blue_900"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageCount"
        app:layout_constraintEnd_toEndOf="@+id/imageCount"
        app:layout_constraintStart_toStartOf="@+id/imageCount"
        app:layout_constraintTop_toTopOf="@+id/imageCount"
        tools:text="5"
        />


    <ImageView
        android:id="@+id/tutorialDot"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:src="@drawable/shape_tutorial_dot"
        app:layout_constraintBottom_toBottomOf="@+id/timer_view"
        app:layout_constraintEnd_toEndOf="@+id/timer_view"
        app:layout_constraintStart_toStartOf="@+id/timer_view"
        app:layout_constraintTop_toTopOf="@+id/timer_view"
        android:visibility="gone"
        android:contentDescription="@string/todo"
        />

    <ImageView
        android:id="@+id/tutorialDot2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:src="@drawable/shape_tutorial_dot"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonMenu"
        app:layout_constraintEnd_toEndOf="@+id/imageCount"
        app:layout_constraintTop_toTopOf="@+id/imageButtonMenu"
        android:visibility="gone"
        android:contentDescription="@string/todo"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>